<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Usamos boxicons-->>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
    <style>
      .btn-edit {
        color: #51af64; /* Color vino para el texto */
        border: 2px solid #51af64; /* Contorno color vino */
      }

      .btn-delete {
        color: #b62645; /* Color vino para el texto */
        border: 2px solid #b62645; /* Contorno color vino */
      }
      .btn-new {
        color: #79879f; /* Color vino para el texto */
        border: 2px solid #79879f; /* Contorno color vino */
      }
      .navbar-brand, .nav-link {
        color: #ec3f64 !important; /* Color vino para el texto */
      }
    </style>

    <title>CRUD</title>
  </head>
  <body>
    
    <nav class="navbar navbar-expand-lg bg-light"style="background-color: #e3f2fd;" >
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Gestion de Empleados</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" href="/">Inicio</a>
              </li>
              
            </ul>
            <form class="d-flex" method="GET" action="/search">
              <input class="form-control me-2" type="search" placeholder="ID" aria-label="Search" name="search">
              <button class="btn btn-outline-success" type="submit"> Buscar </button>
            </form>
          </div>
        </div>
      </nav>

    <div class="container">
        <a href="/create" class="btn btn-new mt-4"><i class='bx bxs-user-plus bx-sm'></i></a>
        <table class="table table-bordered table-striped text-center mt-4">
          <thead>
            <tr style="background-color: #d81a4d; color: #ffffff;">
              <th> ID </th>
              <th> NOMBRE </th>
              <th> DEPARTAMENTO </th>
              <th> SALARIO </th>
              <th> ACCIONES </th>
            </tr>
          </thead>
          <tbody>
            <% results.forEach((empleado) => { %>
              
            
            <tr>
              <td><%= empleado.id %></td>
              <td><%= empleado.nombre %></td>
              <td><%= empleado.departamento %></td>
              <td><%= empleado.salario %></td>
              <td>
                <a href="/edit/<%= empleado.id %>" class="btn btn-edit">editar</a>
                <a href="/delete/<%= empleado.id %>" class="btn btn-delete">borrar</a>
              </td>
            </tr>
          <% }); %>
          </tbody>
        </table>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

   
  </body>
</html>
